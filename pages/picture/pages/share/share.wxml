<view class="box6">

  <view style="position:relative; overflow:hidden">
    <image src="{{savedFilePath}}" mode="aspectFit" class="image"></image>
    <view class="p">{{poetry}}</view>
    <block wx:for="{{barrageList}}" wx:key="id">
      <text class="aon" style="-webkit-animation: commit-move {{item.time}}s linear 0s infinite, forwards;top:{{item.top}}%;color:{{item.color}};display:{{barrageDisplay}}left:100%;">
        {{item.text}}
      </text>
    </block>
  </view>
  <view class="box6_corner_lf"></view>
  <view class="box6_corner_rt"></view>
</view>

<view class="input-v">
  <!--<span>评论：</span>-->
  <input class="input-commit" placeholder-style="color:red; font-size: 24rpx" placeholder="{{placeholder}}" bindconfirm="changeName" value="{{inputValue}}" />
</view>